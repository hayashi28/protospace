.container
  = form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form-signin container"}) do |f|
    %h2.form-signin-heading Please sign in
    %label.sr-only{ for: "inputEmail" }
    = f.email_field :email, autofocus: "", placeholder: "Email address", required: "", class: "form-control"
    %label.sr-only{ for: "inputPassword" }
    = f.password_field :password, placeholder: "Password", required: "", class: "form-control"
    .checkbox
      %label
        = f.check_box :remember_me, value: "remember-me"
        Remember me
    = f.submit "Sign in", class: "btn btn-lg btn-primary btn-block"
    .text-center
    %p
    Not a member?
    = link_to "Sign up now", new_user_registration_path
