- if user_signed_in?
  - if @prototype.like_user(current_user)
    = button_to prototype_like_path(current_user, @prototype), method: :delete, class: "btn btn-default", id: "js-like-button", remote: true do
      = image_tag("icon_heart_red.svg")
      Like
      = @prototype.likes_count
  - else
    = button_to prototype_likes_path(@prototype), method: :post, class: "btn btn-default", id: "js-like-button", remote: true do
      = image_tag("icon_heart.svg")
      Like
      = @prototype.likes_count
- else
  = image_tag("icon_heart_red.svg")
  Like
  = @prototype.likes_count
